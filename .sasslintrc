{
  "options": {
    "merge-default-rules": true,
    "formatter": "html",
    "output-file": "coverage/sass-lint.html"
  },
  "files": {
    "include": "styles/**/*.s+(a|c)ss",
    "ignore": [
      "node_modules/**/*.*"
    ]
  },
  "rules": {
    "no-ids": 0,
    "no-important": 0,
    "property-sort-order": 0,
    "nesting-depth": 0,
    "force-element-nesting": 0,
    "no-color-literals": 0,
    "no-empty-rulesets": 0,
    "mixins-before-declarations": 0,
    "no-qualifying-elements": 0,
    "force-attribute-nesting": 0,
    "class-name-format": 0,
    "no-vendor-prefixes": 0,
    "no-warn": 0,
    "brace-style": 0
  }
}
