{
	"env": {
		"browser": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "script",
		"ecmaFeatures": {
			"jsx": false
		}
	},
	"extends": [
		"google"
	],
	"rules": {
		"linebreak-style": "off",
		"max-len": "off",
		"max-lines": "off",
		"camelcase": "off",
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "^_",
				"varsIgnorePattern": "^_",
				"ignoreRestSiblings": true
			}
		]
	},
	"overrides": [
		{
			"files": [
				"javascripts/lib/browser.js"
			],
			"rules": {
				"spaced-comment": "off"
			}
		},
		{
			"files": "javascripts/core/sui.js",
			"rules": {
				"new-cap": "off"
			}
		}
	]
}