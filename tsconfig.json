{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": false,
    "outDir": "dist",
    "types": ["google.maps", "jest", "material-design-lite", "dom-view-transitions"],
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "jest.setup.ts"
  ]
}
